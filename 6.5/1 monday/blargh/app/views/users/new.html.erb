<h1>Sign up!</h1>
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %>

  <%= f.label :full_name %>
  <%= f.text_field :full_name, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <hr>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
